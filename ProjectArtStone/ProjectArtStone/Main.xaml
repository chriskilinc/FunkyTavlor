<Window x:Class="ProjectArtStone.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectArtStone"
        mc:Ignorable="d"
        Title="Main" Height="720" Width="1280" MaxHeight="1080" MaxWidth="1920">

    <Grid>
        <Grid Margin="0,100">
            <Image x:Name="image" HorizontalAlignment="Left" Height="319" Margin="120,100,0,0" VerticalAlignment="Top" Width="1020" RenderTransformOrigin="0.5,0.5" Source="Assets/logo.png" Stretch="Fill">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="Assets/logo.png"/>
                </Image.OpacityMask>
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.021"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="474,447,0,0" VerticalAlignment="Top" Width="75"/>

        </Grid>

    </Grid>
</Window>
