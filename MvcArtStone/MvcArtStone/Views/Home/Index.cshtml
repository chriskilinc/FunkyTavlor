        @*<div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-2 pull-right">
                        <button id="btnCol3" class="btn-info btn" value="hide/show">COL3</button>
                        <button id="btnColRows" class="btn-info btn">ROWS</button>
